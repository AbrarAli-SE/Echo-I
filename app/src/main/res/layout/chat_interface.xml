<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header Layout -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@drawable/gradient_background"
        android:elevation="2dp">

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/dots"
            android:contentDescription="Menu" />

        <!-- Profile Picture -->

        <ImageView
            android:id="@+id/userPicture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/abraralipic"
            android:contentDescription="User Picture"
            android:scaleType="centerCrop"
            android:background="@drawable/circular_image_background"
            android:clipToOutline="true"
            android:layout_gravity="center" />

        <!-- App Title -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Abrar Ali"
            android:textColor="#949292"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Chat Recycler View -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="0dp"
        android:layout_above="@id/input_layout"
        android:layout_below="@id/header_layout"
        android:padding="10dp"
        android:background="@android:color/transparent" />

    <!-- Input Layout -->
    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#00FFFFFF"
        android:padding="10dp"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/input_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ask Something Else"
            android:background="@drawable/rounded_input_background"
            android:textColor="@android:color/black"
            android:padding="12dp"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/mic"
            android:contentDescription="Send"
            android:background="@drawable/rounded_button_background"
            android:elevation="2dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            app:tint="#1D3650" /> <!-- Ensure the icon is well-centered and scaled within the button -->

    </LinearLayout>

</RelativeLayout>
